generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id       String   @id @default(uuid())
  email    String   @unique // <-- add unique attribute
  password String
  fullname String
  contact  Contact?
  about    About?
}

model Contact {
  id         String  @id @default(uuid())
  account    Account @relation(fields: [id_account], references: [id])
  id_account String  @unique
}

model About {
  id         String  @id @default(uuid())
  account    Account @relation(fields: [id_account], references: [id])
  id_account String  @unique
  content    String  @db.Text
}

model Category {
  id   String @id @default(uuid())
  name String @unique
  url  String
  meal Meal[]
}

model Meal {
  id          String   @id @default(uuid())
  category    Category @relation(fields: [id_category], references: [id], onDelete: Cascade)
  id_category String

  name        String
  best_seller Boolean @default(false)
  price       Int

  image Image[]
}

model Image {
  id   String @id @default(uuid())
  meal Meal   @relation(fields: [id_meal], references: [id], onDelete: Cascade)

  id_meal String
  url     String
}

